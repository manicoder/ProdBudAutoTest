            <BoxView IsVisible="{Binding IsStep3Done}" Grid.Column="5" HeightRequest="10" Margin="0,9,0,0" BackgroundColor="{StaticResource StepLineColor}" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>

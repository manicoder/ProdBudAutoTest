            <BoxView IsVisible="{Binding IsStep4Done}" Grid.Column="7" HeightRequest="10" Margin="0,9,0,0" BackgroundColor="{StaticResource StepLineColor}" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>

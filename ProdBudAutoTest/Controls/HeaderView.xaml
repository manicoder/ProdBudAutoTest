<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProdBudAutoTest.Controls.HeaderView">
    <ContentView.Content>
        <StackLayout HorizontalOptions="FillAndExpand" Spacing="0">
            <StackLayout HorizontalOptions="FillAndExpand" HeightRequest="100" Spacing="0" BackgroundColor="Orange">
                <BoxView  HeightRequest="36"/>
                <Grid HorizontalOptions="FillAndExpand" ColumnSpacing="10" Padding="10,0,10,0"
                      VerticalOptions="End">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ImageButton BackgroundColor="Transparent"  Source="home" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Center" 
                                 HeightRequest="35" WidthRequest="35"/>
                    <StackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Start" VerticalOptions="Center">
                        <Label Text="12345678901234567" LineBreakMode="TailTruncation" TextColor="White" FontSize="20" Style="{StaticResource TitleBold}" />
                        <Label Text="432423424324234"  LineBreakMode="TailTruncation" TextColor="White" FontSize="18" Style="{StaticResource TitleBold}" />
                    </StackLayout>
                    <StackLayout Grid.Column="2" HorizontalOptions="End" Orientation="Horizontal">
                        <Frame Padding="0"
                               HeightRequest="25" WidthRequest="25" 
                               BackgroundColor="#0080FF" 
                               BorderColor="Blue"
                               CornerRadius="20"
                               VerticalOptions="Center"
                               HasShadow="False"/>
                        <Frame Padding="0"
                               HeightRequest="25" WidthRequest="25" 
                               BackgroundColor="#00D76B" 
                               BorderColor="Green"
                               CornerRadius="20"
                               VerticalOptions="Center"
                               HasShadow="False"/>
                        <Frame Padding="0"
                               HeightRequest="25" WidthRequest="25" 
                               BackgroundColor="#FFFF80" 
                               BorderColor="Yellow"
                               CornerRadius="20"
                               VerticalOptions="Center"
                               HasShadow="False"/>

                    </StackLayout>
                </Grid>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>